datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String
  password String?
  audios   Audios[]
}

model Audios {
  id       String @id @default(uuid())
  title    String
  url      String
  author   User   @relation(fields: [authorId], references: [id])
  authorId String
}
